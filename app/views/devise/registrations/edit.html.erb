<h3 class="text-center">ユーザー編集</h3 >

<div class="text-center edit-form">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-group">
    <%= f.label :プロフィール画像 %><br />
    <%= f.file_field :image, autofocus: true %>
  </div>
  <p class="form-group field">~
    <%= f.label :ユーザーネーム %><br />
    <%= f.text_field :username, class: "form-control", autofocus: true, autocomplete: "username" %>
  </p>
  <p class="form-group field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
  </p>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>現在認証を待っています: <%= resource.unconfirmed_email %></div>
  <% end %>

  <p class="form-group field">
    <%= f.label :password %> <i>(変更しない場合は空白にしてください。)</i><br />
    <%= f.password_field :password,class: "form-control", autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em>最低6文字以上</em>
    <% end %>
  </p>

  <p class="form-group field">
    <%= f.label :確認パスワード　もう一度入力してください %><br />
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
  </p>

  <p class="form-group field">
    <%= f.label :現在のパスワード %> <i>(変更するには現在のパスワードが必要です)</i><br />
    <%= f.password_field :current_password,class: "form-control", autocomplete: "current-password" %>
  </p>

  <div class="actions">
    <%= f.submit "編集",class: "btn btn-primary" %>
  </div>
<% end %>

<h3>アカウントの退会</h3>
<%= button_to "退会", registration_path(resource_name), data: { confirm: "本当に退会しますか?" }, method: :delete,class: "btn btn-primary" %>
<%= link_to "戻る", :back %>
</div>