<h3 class="text-center">ログイン</h3>

<div class="text-center edit-form">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <p class="form-group field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control",autocomplete: "email" %>
  </p>
  <p class="form-group field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password,class: "form-control", autocomplete: "current-password" %>
  </p>
  <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :ログインを保存しますか？ %>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン",class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>