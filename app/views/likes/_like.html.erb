<% if !current_user.nil? %>
  <% if !Like.exists?(user_id: current_user.id, context_id: context.id) %>
    <%= link_to context_likes_path(context.id), method: :post, remote: true, class:"like-btn", id: "off_like_button_#{ context.id }" do %>
      <i class="far fa-heart fa-2x"></i>
      <%= context.likes.count %>
    <% end %>
  <% else %>
    <%= link_to context_like_path(context_id: context.id, id: context.likes[0].id), method: :delete, remote: true, class:"like-btn", id: "on_like_button_#{ context.id }" do %>
      <i class="fas fa-heart fa-2x"></i>
      <%= context.likes.count %>
    <% end %>
  <% end %>
<% else %>
  <%= link_to user_session_path, class:"like-btn", id: "off_like_button_#{ context.id }" do %>
    <i class="far fa-heart fa-2x"></i>
    <%= context.likes.count %>
  <% end %>
<% end %>